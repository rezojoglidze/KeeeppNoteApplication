<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/before_Update_Background_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/back_style"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/before_Update_Title"
            style="@style/word_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:alpha="0.6"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="Title text view "
            android:minHeight="25dp"
            android:paddingLeft="20dp"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/before_Update_Note"
            style="@style/word_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="Note text view "
            android:minHeight="25dp"
            android:paddingLeft="20dp"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/before_Update_Date"
                style="@style/word_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="20dp"
                android:alpha="0.6"
                android:background="@null"
                android:hint="edited time view "
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/update_Note_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_style"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/updated_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="4dp"
            android:hint="Title"
            android:textSize="20dp"></EditText>

        <EditText
            android:id="@+id/updated_Note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="top"
            android:hint="Note"
            android:minHeight="80dp"></EditText>

        <Button
            android:id="@+id/updateSaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp"
            android:text="update"></Button>

    </LinearLayout>
</LinearLayout>